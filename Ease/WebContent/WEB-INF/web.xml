        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>home.jsp</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home.jsp</servlet-name>
        <url-pattern>/home/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>team.jsp</servlet-name>
        <jsp-file>/team.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>team.jsp</servlet-name>
        <url-pattern>/teams/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>productPage.jsp</servlet-name>
        <jsp-file>/productPage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>productPage.jsp</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>new_admin.jsp</servlet-name>
        <jsp-file>/new_admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_admin.jsp</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>rgpd</servlet-name>
        <jsp-file>/rgpd.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
